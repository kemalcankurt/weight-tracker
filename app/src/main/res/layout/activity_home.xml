<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50">

    <!-- App Bar with Gradient -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@drawable/gradient_app_bar_layer"
        app:elevation="8dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:title="Weight Tracker"
            android:titleTextColor="@color/white"
            app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:elevation="0dp" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good morning!"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today, Oct 18"
                    android:textSize="16sp"
                    android:textColor="@color/gray_600" />
            </LinearLayout>

            <!-- Goal Progress Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <!-- Circular Progress -->
                    <com.example.kc_weight_tracker.CircularProgressView
                        android:id="@+id/circularProgress"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="20dp" />

                    <!-- Goal Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvGoalTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weight Goal"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_900"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvGoalWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="175.0 lb"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue_600"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvGoalSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Target: Nov 18, 2025"
                            android:textSize="14sp"
                            android:textColor="@color/gray_600" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Current Weight Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvCurrentWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="180.5"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_900" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Weight"
                            android:textSize="12sp"
                            android:textColor="@color/gray_600" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Streak Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvStreak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/green_600" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Day Streak"
                            android:textSize="12sp"
                            android:textColor="@color/gray_600" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Action Cards Grid -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginBottom="16dp" />

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:columnCount="2"
                app:rowCount="2"
                app:useDefaultMargins="true">

                <!-- Log Weight Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardLogWeight"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_scale_24"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/circle_background_blue"
                            android:padding="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Log Weight"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_900"
                            android:layout_marginBottom="4dp"
                            android:maxLines="1"
                            android:ellipsize="none" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Record today's weight"
                            android:textSize="12sp"
                            android:textColor="@color/gray_600"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="none" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Notification History Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardNotificationHistory"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_notifications_24"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/circle_background_green"
                            android:padding="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notification History"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_900"
                            android:layout_marginBottom="4dp"
                            android:maxLines="1"
                            android:ellipsize="none"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View notification log"
                            android:textSize="12sp"
                            android:textColor="@color/gray_600"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="none" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Settings Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSettings"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_settings_24"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/circle_background_orange"
                            android:padding="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_900"
                            android:layout_marginBottom="4dp"
                            android:maxLines="1"
                            android:ellipsize="none" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Height &amp; preferences"
                            android:textSize="12sp"
                            android:textColor="@color/gray_600"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="none" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Set Goal Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSetGoal"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_target_24"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/circle_background_purple"
                            android:padding="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Set Goal"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_900"
                            android:layout_marginBottom="4dp"
                            android:maxLines="1"
                            android:ellipsize="none" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Update your target"
                            android:textSize="12sp"
                            android:textColor="@color/gray_600"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="none" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLogWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_24"
        android:backgroundTint="@color/blue_600"
        android:tint="@color/white"
        app:layout_anchor="@id/appBar"
        app:layout_anchorGravity="bottom|end"
        app:elevation="8dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>